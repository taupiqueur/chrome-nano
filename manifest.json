{
  "name": "nano",
  "version": "0.1.0",
  "description": "Edit text areas in webpages with a text editor program.",
  "homepage_url": "https://github.com/taupiqueur/chrome-nano",
  "manifest_version": 3,
  "background": {
    "type": "module",
    "service_worker": "src/background.js"
  },
  "permissions": ["activeTab", "contextMenus", "nativeMessaging", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Open with nano"
  },
  "options_ui": {
    "page": "src/options/options.html"
  },
  "icons": {
    "16": "assets/nano-logo@16px.png",
    "32": "assets/nano-logo@32px.png",
    "48": "assets/nano-logo@48px.png",
    "128": "assets/nano-logo@128px.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "MacCtrl+I"
      }
    }
  }
}
